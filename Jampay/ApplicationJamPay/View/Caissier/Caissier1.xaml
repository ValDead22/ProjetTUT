<Window x:Class="ApplicationJamPay.View.Caissier.Caissier1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationJamPay.View.Caissier"
        mc:Ignorable="d"
        Title="{Binding Title}"
        DataContext="{Binding Caissier, Source={StaticResource Locator}}"
        Height="439.364" Width="625.32">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <TabItem Header="Caisse">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                        <ListView Grid.Column="0"  HorizontalAlignment="Stretch" Margin="10">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Plat"/>
                                    <GridViewColumn Header="Quantité"/>
                                    <GridViewColumn Header="Prix" />
                                </GridView>
                            </ListView.View>
                        </ListView>


                    <StackPanel Grid.Column="1" DockPanel.Dock="Bottom" Margin="10">
                        <Label Content="0.00€" HorizontalAlignment="Center" FontSize="36"/>
                        <Separator Width="20" Height="25" Background="Transparent"/>
                        <Button  Content="Ajouter un plat" Width="150"  HorizontalContentAlignment="Center" Height="70" />
                        <Separator Width="20" Height="25" Background="Transparent"/>
                        <Button  Content="Réglement" Width="150"  HorizontalContentAlignment="Center" Height="70" />
                            
                        </StackPanel>
                   

                </Grid>

                
            </TabItem>
        </TabControl>
        

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Label Grid.Column="0" Content="Connecté en tant que :" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Grid.Column="1" Content="Déconnexion" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>

    </Grid>


</Window>
