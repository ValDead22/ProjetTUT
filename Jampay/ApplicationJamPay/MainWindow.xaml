<Window x:Class="ApplicationJamPay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationJamPay"
        mc:Ignorable="d"
        Title="{Binding Title}"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Height="380" Width="320.333">
    <Grid>
        <Label Content="Bienvenue" HorizontalAlignment="Left" Margin="51,32,0,0" VerticalAlignment="Top" FontSize="38"/>
        <TextBox HorizontalAlignment="Left" Height="19" Margin="51,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="217" Text="{Binding Matricule}"/>
        <Label Content="Votre matricule" HorizontalAlignment="Left" Margin="51,121,0,0" VerticalAlignment="Top"/>
        <Label Content="Votre mot de passe" HorizontalAlignment="Left" Margin="51,191,0,0" VerticalAlignment="Top"/>
        <Button Content="Connection" HorizontalAlignment="Left" Margin="193,265,0,0" VerticalAlignment="Top" Width="75"/>
        <PasswordBox HorizontalAlignment="Left" Margin="51,217,0,0" VerticalAlignment="Top" Width="217" Height="18"/>

    </Grid>
</Window>
